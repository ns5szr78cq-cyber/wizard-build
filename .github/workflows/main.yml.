name: Build DooN Dylib
on: [push, workflow_dispatch]

jobs:
  build:
    runs-on: macos-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Setup Theos
        run: |
          sudo git clone --recursive https://github.com/theos/theos.git /opt/theos
          sudo chown -R $(id -u):$(id -g) /opt/theos
          echo "THEOS=/opt/theos" >> $GITHUB_ENV

      - name: Setup iOS SDK
        run: |
          git clone https://github.com/theos/sdks.git /opt/theos/sdks

      - name: Compile Dylib
        run: |
          export THEOS=/opt/theos
          make package FINAL_PACKAGE=1
          
      - name: Save Dylib File
        uses: actions/upload-artifact@v3
        with:
          name: DooN-Dylib-Package
          path: .theos/obj/debug/*.dylib